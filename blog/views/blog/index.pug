extends ../components/layout

block content
    include ../components/navbar
    div.container
        div.text-white.text-center.py-3
            h1#pageTitle All Posts
    div#blogContainer.container
        for blog in blogs.reverse()
            div.card.mb-3
                article#blog.row
                    div.col-md-5.d-flex.align-items-center
                        img.img-thumbnail(onerror="this.src='https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80'" src=`${blog.image}`, alt="blog image")
                    div.col-md-7.card-body
                        a#blogTitle.card-title(href=`/blogs/${blog._id}`)= blog.title
                        p#blogMeta.text-muted
                            em By #{blog.user.username} on #{blog.created}
                        p.blogBody.card-text #{blog.body.substring(0, 200)} ...
                        a.ui.inverted.blue.tiny.button(href=`/blogs/${blog._id}`) Read more
        div.placeholder