nav#navbar.navbar.navbar-expand-md.navbar-dark.mb-3.py-0
    div.container
        a.navbar-brand.d-flex.align-items-baseline.pb-0(href="/")
            i.fas.fa-pen.mr-1
            p.mb-0 MicroBlog
        button.navbar-toggler.border-0.p-0.my-1(type="button" data-toggle="collapse" data-target="#navContent")
            span.navbar-toggler-icon

        div#navContent.collapse.navbar-collapse
            ul#navList.navbar-nav.d-flex
                div.d-flex.flex-column.flex-md-row
                    li.nav-item.ml-auto
                        a.nav-link.text-white.pb-md-0(href="/blogs")
                            i.fas.fa-book-open.mr-1
                            span.mb-0 All Posts
                    li.nav-item.ml-auto
                        a.nav-link.text-white.pb-md-0(href="/blogs/new")
                            i.fas.fa-plus-circle.mr-1
                            span.mb-0 New Post
                div.ml-md-auto.d-flex.flex-column.flex-md-row
                    if !currentUser
                        li.nav-item.ml-auto
                            a.nav-link.text-white.pb-md-0(href="/register")
                                i.fas.fa-user-plus.mr-1
                                span.mb-0 Sign Up
                        li.nav-item.ml-auto
                            a.nav-link.text-white.pb-md-0(href="/login")
                                i.fas.fa-user.mr-1
                                span.mb-0 Sign In
                    else
                        li.nav-item.dropdown.ml-auto
                            a.nav-link.dropdown-toggle.text-white.pb-md-0(href="#" data-toggle="dropdown") Signed in as #{currentUser.username}
                            div#userDropdown.dropdown-menu.m-0.border-0.bg-transparent
                                a.dropdown-item.text-white(href="/logout")
                                    i.fas.fa-sign-out-alt.mr-1
                                    span.mb-0 Sign Out

div.container
    if error && error.length > 0
        div.alert.alert-danger.py-2.px-3(role="alert")= error
    else if success && success.length > 0
        div.alert.alert-success.py-2.px-3(role="alert")= success
